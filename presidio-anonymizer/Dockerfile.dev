# Dockerfile
FROM python:3.13-slim@sha256:3de9a8d7aedbb7984dc18f2dff178a7850f16c1ae7c34ba9d7ecc23d0755e35f

RUN apt-get update \
  && apt-get install -y build-essential

COPY --from=root requirements-poetry.txt /tmp/requirements-poetry.txt
RUN pip install --require-hashes -r /tmp/requirements-poetry.txt
