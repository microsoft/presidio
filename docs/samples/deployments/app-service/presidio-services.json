{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "analyzer": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Choose if to deploy the Analyzer service"
            }
        },
        "anonymizer": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Choose if to deploy the Anonymizer service"
            }
        },
        "imageReductor": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Choose if to deploy the Image Reductor service"
            }
        },
        "analyzerWebAppName": {
            "type": "string",
            "defaultValue": "[concat('analyzer-', uniqueString(resourceGroup().id))]",
            "minLength": 2,
            "metadata": {
                "description": "Analyzer Web app name."
            }
        },
        "anonymizerWebAppName": {
            "type": "string",
            "defaultValue": "[concat('anonymizer-', uniqueString(resourceGroup().id))]",
            "minLength": 2,
            "metadata": {
                "description": "Anonymizer Web app name."
            }
        },
        "imageReductorWebAppName": {
            "type": "string",
            "defaultValue": "[concat('image-', uniqueString(resourceGroup().id))]",
            "minLength": 2,
            "metadata": {
                "description": "Image Reductor Web app name."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "singleAppServicePlan": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Choose if to deploy each service to its own App Service Plan or to share the plan."
            }
        },
        "analyzerSku": {
            "type": "string",
            "defaultValue": "P1V3",
            "metadata": {
                "description": "The SKU of Analyzer App Service Plan. Only required when singleAppServicePlan is false"
            },
            "allowedValues": ["F2", "B2", "S2", "P1V3", "I2"]
        },
        "anonymizerSku": {
            "type": "string",
            "defaultValue": "P1V3",
            "metadata": {
                "description": "The SKU of Anonymizer App Service Plan. Only required when singleAppServicePlan is false"
            },
            "allowedValues": ["F1", "B1", "S1", "P1V3", "I1"]
        },
        "imageReductorSku": {
            "type": "string",
            "defaultValue": "P1V3",
            "metadata": {
                "description": "The SKU of Image Reductor App Service Plan. Only required when singleAppServicePlan is false"
            },
            "allowedValues": ["F2", "B2", "S2", "P1V3", "I2"]
        },
        "imagesArePublic": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Are the images hosted on a public registry"
            }
        },
        "analyzerImage": {
            "type": "string",
            "defaultValue": "mcr.microsoft.com/presidio-analyzer:latest",
            "metadata": {
                "description": "The full analyzer image name. Only required if image is not hosted on a public registry (imageIsPublic is false)"
            }
        },
        "anonymizerImage": {
            "type": "string",
            "defaultValue": "mcr.microsoft.com/presidio-anonymizer:latest",
            "metadata": {
                "description": "The full anonymizer image name. Only required if image is not hosted on a public registry (imageIsPublic is false)"
            }
        },
        "imageReductorImage": {
            "type": "string",
            "defaultValue": "mcr.microsoft.com/presidio-image-redactor:latest",
            "metadata": {
                "description": "The full image reductor image name. Only required if image is not hosted on a public registry (imageIsPublic is false)"
            }
        },
        "dockerRegsitryUrl": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The URL of docker registry. Only required if image is not hosted on a public registry (imageIsPublic is false)"
            }
        },
        "dockerRegistryUser": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The user name for docker registry. Only required if image is not hosted on a public registry (imageIsPublic is false)"
            }
        },
        "dockerRegistryPassword": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "The user password for docker registry. Only required if image is not hosted on a public registry (imageIsPublic is false)"
            }
        },
        "ipRestriction": {
            "type": "string",
            "defaultValue": "any",
            "metadata": {
                "description": "Optional IP range to restrict access to."
            }
        }
    },
    "variables": {
        "sharedAppServicePlanName": "[concat('presidioServicePlan-', uniqueString(resourceGroup().id))]",
        "analyzerServicePlanName": "[if(equals(parameters('singleAppServicePlan'), 'true'), variables('sharedAppServicePlanName'), concat(parameters('analyzerWebAppName'), '-ServicePlan'))]",
        "anonymizerServicePlanName": "[if(equals(parameters('singleAppServicePlan'), 'true'), variables('sharedAppServicePlanName'), concat(parameters('anonymizerWebAppName'), '-ServicePlan'))]",
        "imageRedactorServicePlanName": "[if(equals(parameters('singleAppServicePlan'), 'true'), variables('sharedAppServicePlanName'), concat(parameters('imageReductorWebAppName'), '-ServicePlan'))]",
        "analyzerServicePlanSku": "",
        "anonymizerServicePlanSku": "",
        "imageRedactorServicePlanSku": ""
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "presidio-analyzer",
            "condition": "[parameters('analyzer')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/microsoft/presidio/main/docs/samples/deployments/app-service/presidio-app-service.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "webAppName": {
                        "value": "[parameters('analyzerWebAppName')]"
                    },
                    "sku": {
                        "value": "[parameters('analyzerSku')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "imageIsPublic": {
                        "value": "[parameters('imagesArePublic')]"
                    },
                    "image": {
                        "value": "[parameters('analyzerImage')]"
                    },
                    "dockerRegsitryUrl": {
                        "value": "[parameters('dockerRegsitryUrl')]"
                    },
                    "dockerRegistryUser": {
                        "value": "[parameters('dockerRegistryUser')]"
                    },
                    "dockerRegistryPassword": {
                        "value": "[parameters('dockerRegistryPassword')]"
                    },
                    "ipRestriction": {
                        "value": "[parameters('ipRestriction')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "presidio-anonymizer",
            "condition": "[parameters('anonymizer')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/microsoft/presidio/main/docs/samples/deployments/app-service/presidio-app-service.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "webAppName": {
                        "value": "[parameters('anonymizerWebAppName')]"
                    },
                    "sku": {
                        "value": "[parameters('anonymizerSku')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "imageIsPublic": {
                        "value": "[parameters('imagesArePublic')]"
                    },
                    "image": {
                        "value": "[parameters('anonymizerImage')]"
                    },
                    "dockerRegsitryUrl": {
                        "value": "[parameters('dockerRegsitryUrl')]"
                    },
                    "dockerRegistryUser": {
                        "value": "[parameters('dockerRegistryUser')]"
                    },
                    "dockerRegistryPassword": {
                        "value": "[parameters('dockerRegistryPassword')]"
                    },
                    "ipRestriction": {
                        "value": "[parameters('ipRestriction')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "presidio-image-reductor",
            "condition": "[parameters('imageReductor')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/microsoft/presidio/main/docs/samples/deployments/app-service/presidio-app-service.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "webAppName": {
                        "value": "[parameters('imageReductorWebAppName')]"
                    },
                    "sku": {
                        "value": "[parameters('imageReductorSku')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "imageIsPublic": {
                        "value": "[parameters('imagesArePublic')]"
                    },
                    "image": {
                        "value": "[parameters('imageReductorImage')]"
                    },
                    "dockerRegsitryUrl": {
                        "value": "[parameters('dockerRegsitryUrl')]"
                    },
                    "dockerRegistryUser": {
                        "value": "[parameters('dockerRegistryUser')]"
                    },
                    "dockerRegistryPassword": {
                        "value": "[parameters('dockerRegistryPassword')]"
                    },
                    "ipRestriction": {
                        "value": "[parameters('ipRestriction')]"
                    }
                }
            }
        }
    ]
}
